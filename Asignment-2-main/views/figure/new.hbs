<div class="container col-md-8 mt-5">
   <form action="/figure/add" method="post" class="card p-3 bg-info text-center">
      <h2 class="text text-danger">Add new Items</h2>
      <div class="form-group">
         <label class="text-success h6">Items Name</label>
         <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Origin</label>
         <input class="form-control" type="origin" name="origin" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Material </label><br>
         <input class="form-control" type="material" name="material" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Image</label>
         <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Price</label>
         <input class="form-control" type="price" name="price" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Status</label>
         <input class="form-control" type="status" name="status" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-danger mt-3" type="submit" value="Add">
      </div>
   </form>
</div>