<div class="container col-md-8 mt-5">
   <form action="/figure/edit/{{figure._id}}" method="post" class="card p-3 bg-info text-center">
      <h2 class="text text-danger">Edit items</h2>
      <div class="form-group">
         <label class="text-success h6">Items Name</label>
         <input class="form-control" type="text" name="name" value="{{figure.name}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Origin</label>
         <input class="form-control" type="origin" name="origin" value="{{figure.origin}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Material</label>
         <input class="form-control" type="material" name="material" value="{{figure.material}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">items Image</label><br>
         <img src="{{figure.image}}" width="100" height="100">
         <input class="form-control mt-3" type="text" name="image" value="{{figure.image}}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Price</label>
         <input class="form-control" type="price" name="price" value="{{figure.price}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Status</label>
         <input class="form-control" type="status" name="status" value="{{figure.status}}" required min=0 max=10>
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-danger mt-3" type="submit" value="Edit">
      </div>
   </form>
</div>