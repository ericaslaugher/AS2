<div class="container col-md-8 mt-5">
   <form action="/product/edit/{{product._id}}" method="post" class="card p-3 bg-info text-center">
      <h2 class="text  text-danger">Edit items</h2>
      <div class="form-group">
         <label class="text-success h6">Items Name</label>
         <input class="form-control" type="text" name="name" value="{{product.name}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Origin</label>
         <input class="form-control" type="origin" name="origin" value="{{product.origin}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Material</label>
         <input class="form-control" type="material" name="material" value="{{product.material}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">items Image</label><br>
         <img src="{{product.image}}" width="100" height="100">
         <input class="form-control mt-3" type="text" name="image" value="{{product.image}}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Price</label>
         <input class="form-control" type="price" name="price" value="{{product.price}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Status</label>
         <input class="form-control" type="status" name="status" value="{{product.status}}" required min=0 max=10>
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-danger mt-3" type="submit" value="Edit">
      </div>
   </form>
</div>