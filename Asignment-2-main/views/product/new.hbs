<div class="container col-md-8 mt-5">
   <form action="/product/add" method="post" class="card p-3 bg-info text-center">
      <h2 class="text text-danger">Add new Items</h2>
      <div class="form-group">
         <label class="text-success h6">Items Name</label>
         <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Origin</label>
         <input class="form-control" type="text" name="origin" required minlength="3" maxlength="20">
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Status </label>
         <select name="product" class="form-control">
            <option value="">Select Status</option>
            <option value="1">On stock</option>
            <option value="2">Sold out</option>
         </select>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Items Material </label><br>
         <input class="form-control" type="text" name="material" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Image</label>
         <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Price</label>
         <input class="form-control" type="number" name="price" required min="550">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Items Quantity </label>
         <input class="form-control" type="number" name="price" required min="1">
      </div>
      
      <div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="BestSeller" >
  <label class="form-check-label" for="flexCheckBestSeller">
    BestSeller checkbox
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="UnBestSeller" checked>
  <label class="form-check-label" for="flexCheckUnBestseller">
    UnBestSeller checkbox
  </label>
</div>


      <div class="form-group mt-3">
         <input class="btn btn-danger mt-3" type="submit" value="Add">
      </div>
   </form>
</div>